---
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<section class="section">
  {title && <h2 class="section-title color-title">{title}</h2>}
  <slot />
</section>

<style>
  .section {
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    gap: 1rem;
  }

  .section-title {
    width: 100%;
    font-size: 2em;
    color: var(--secondary);
  }
</style>
